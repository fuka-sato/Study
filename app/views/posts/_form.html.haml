.new__post
  = form_for [@post] do |f|
    .new__post__title
      %label タイトル
      %span 必須
      %br
        = f.text_field :title, class: 'title-input', placeholder: '30文字まで', maxlength: "30"
    .new__post__body
      %label 本文
      %span 必須
      %br
        = f.text_area :body,class: 'input', placeholder: '学んだ内容を記載'
    .new__post__url
      %label 参考にしたURL
      .new__post__url__in
        = f.text_area :url,class: 'url', placeholder: 'https://~'
    .new__post__category
      %label 学んだ言語（複数ある場合は「,」で区切ってください）
      %span 必須
      %br
        = f.text_field :tag_list, value: @post.tag_list.join(','), class: "tag",placeholder: 'ruby,rails'
    .new__post__submit
      = f.submit '投稿する', class: 'btn'