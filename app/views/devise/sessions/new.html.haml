.login
  .login__header
    = render "posts/header"
  .login__in
    .login__in__left
      %p アカウントをお持ちではない方
      %p.login__in__left__icon
        = icon('fa', 'cat', class: 'icon')
      .login__in__left__new
        = link_to "新規会員登録" ,new_user_registration_path
      .login__in__left__g
        = link_to 'Googleアカウントで登録',"#"

    .login__in__right
      %p アカウントをお持ちの方
      %p.login__in__right__icon
        = icon('fa', 'dog', class: 'icon')
      .login__in__right__form
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          .login__in__right__form__input
            = f.email_field :email, class: 'input', placeholder: 'メールアドレス' 
          .login__in__right__form__pass
            = f.password_field :password, class: 'input', placeholder: 'パスワード'
          .login__main__in__form__btn
            = f.submit 'ログイン', class: 'btn'
          
          .login__in__right__form__g
            = link_to 'Googleアカウントでログイン',"#"
